[color]
    ui = auto

[core]
    editor = nvim

[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f

[pull]
	ff = only

# Customize for personal repos.
[includeIf "hasconfig:remote.*.url:**https://github.com/cpplain/**"]
    path = ~/.config/git/config-cpplain

# Customize for Lamp-Post Apps repos.
[includeIf "hasconfig:remote.*.url:https://github.com/lamppostapps/**"]
    path = ~/.config/git/config-lamppostapps

# Customize for ServiceNow repos.
[includeIf "hasconfig:remote.*.url:https://github.com/lightstep/**"]
    path = ~/.config/git/config-servicenow
